<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_draw_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/darkWindowBackground</item>
        <item name="android:windowBackground">@drawable/splash_draw_dark</item>
        <item name="android:navigationBarColor">@color/darkWindowBackground</item>
    </style>

    <style name="ThemeChangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="ViewSourceTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="colorPrimary">@color/translucent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light" />

    <style name="BottomNavViewStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">?colorAccent</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="colorControlActivated">?colorAccent</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetDialogAnimation</item>

    </style>

    <style name="BottomSheetDialogAnimation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>


    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_corners_bottom_radius</item>
        <item name="cornerSizeTopLeft">@dimen/radius_corners_bottom_radius</item>
    </style>

    <style name="ActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>


    <style name="SearchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/light_accent</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/light_accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/light_accent</item>
    </style>


</resources>
